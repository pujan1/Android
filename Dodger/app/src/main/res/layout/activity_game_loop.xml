<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pujanparikh.dodger.gameLoop">

    <ImageView
        android:src="@drawable/back1"
        android:id="@+id/back1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />

    <ImageView
        android:src="@drawable/back1"
        android:id="@+id/back2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />


    <ImageView
        android:src="@drawable/back1"
        android:id="@+id/back3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retry"
        android:id="@+id/retryBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score : "
        android:id="@+id/scoretxt"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/retryBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scorebox"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignTop="@+id/scoretxt"
        android:layout_alignRight="@+id/retryBtn"
        android:layout_alignEnd="@+id/retryBtn"
        android:text="0" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/moveRight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:width="175dp"
        android:visibility="visible"
        android:layout_alignTop="@+id/ivAnim" />





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/moveleft"
        android:layout_toLeftOf="@+id/moveRight"
        android:width="175dp"
        android:visibility="visible"
        android:layout_alignTop="@+id/moveRight"
        android:layout_alignBottom="@+id/moveRight" />

    <ImageView
        android:id="@+id/ivAnim"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Animation" />

    <ImageView
        android:id="@+id/bear1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Animation" />


    <ImageView
        android:id="@+id/bear2"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Animation" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/scoreview"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/moveleft"
        android:layout_toEndOf="@+id/moveleft" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:id="@+id/scoretemp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/moveRight"
        android:layout_toStartOf="@+id/moveRight" />


</RelativeLayout>
